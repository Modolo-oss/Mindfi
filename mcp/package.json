{
  "name": "mindfi-mcp",
  "version": "1.0.0",
  "description": "MindFi MCP Server - DeFi tools via Model Context Protocol",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json --skipLibCheck --noEmitOnError false || exit 0",
    "dev": "npx wrangler dev",
    "deploy": "npx wrangler deploy",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "tsx test-tools-direct.ts",
    "test:tools": "tsx test-tools-direct.ts",
    "test:unit": "tsx test-tools-unit.ts",
    "test:before-deploy": "pnpm test:unit && pnpm test:tools",
    "inspector": "mcp-inspector"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@nullshot/agent": "^0.3.4",
    "@nullshot/mcp": "^0.3.6",
    "hono": "^4.4.7",
    "thirdweb": "^5.114.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@modelcontextprotocol/inspector": "^0.17.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "wrangler": "^4.51.0"
  }
}
