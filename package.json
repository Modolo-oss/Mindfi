{
  "name": "mindfi-monorepo",
  "version": "1.0.0",
  "description": "MindFi - Where minds meet DeFi. AI-powered multi-chain DeFi agent platform.",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter mindfi-backend dev",
    "dev:frontend": "pnpm --filter mindfi-frontend dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:frontend\"",
    "build": "pnpm --filter mindfi-backend build && pnpm --filter mindfi-frontend build",
    "build:backend": "pnpm --filter mindfi-backend build",
    "build:frontend": "pnpm --filter mindfi-frontend build",
    "deploy:backend": "pnpm --filter mindfi-backend deploy",
    "autonomous": "pnpm --filter mindfi-backend autonomous",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

